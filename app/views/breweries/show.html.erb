<div id="fadein">
<div class="container-fluid index-products" style = "background:linear-gradient(to right, rgba(2,0,0,0.4) 0%,rgba(2,0,0,0.42) 1%,rgba(0,0,0,0.38) 18%,rgba(214,214,214,0) 25%,rgba(201,201,201,0) 91%,rgba(0,0,0,0.4) 100%), url('http://res.cloudinary.com/cavedesmoines/image/upload/v1473258751/index-products_jkifoo.jpg');">
  <%= render '/shared/navbar' %>
  <div class="row">
    <div class="col-xs-12 col-sm-2">
      <div class="brewerie-description">
      <%= @brewery.description %>
      </div>
        <%= render '/shared/news' %>
    </div>
    <div class="col-xs-12 col-sm-8">
      <h2 class="cat-beer">Brasserie : <%= @brewery.name %></h2>
      <div class="container-fluid">
        <div class="row">
          <div>
            <% if @products.count != 0 %>
              <% @products.each do |product| %>
                <div class="col-xs-12">
                  <div class="card-show-index">
                    <%= render partial: '/shared/product', locals: { product: product } %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div style="font-size: 150%;color: white;font-weight: bold;margin-left: 10%">
                Pas d'article dans cette recherche, r√©essayez :)
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-2 refine-search">
      <%= render 'shared/refine-search' %>
    </div>
  </div>
</div>
<%= render '/shared/footer' %>
</div>
