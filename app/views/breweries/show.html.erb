<div id="fadein">
<div class="container-fluid index-products" style = "background: linear-gradient(-225deg, rgba(201, 48, 44, 0) 0%, rgba(255, 235, 0, 0) 100%), url('http://res.cloudinary.com/cavedesmoines/image/upload/v1473258751/index-products_jkifoo.jpg');">
  <%= render '/shared/navbar' %>
  <div class="row">
    <div class="col-xs-12 col-sm-2">
      <h2 class="brewerie-title"></h2>
      <div class="brewerie-description">
      <%= @brewery.description %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-8">
      <h2 class="cat-beer">Brasserie : <%= @brewery.name %></h2>
      <div class="container-fluid">
        <div class="row">
          <div>
            <% if @products.count != 0 %>
              <% @products.each do |product| %>
                <div class="col-xs-12 col-sm-4">
                  <div class="card-show-index">
                    <%= render partial: '/shared/product', locals: { product: product } %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div>
                Pas d'article dans cette recherche, r√©essayez :)
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-2 refine-search">
      <%= render 'shared/refine-search' %>
    </div>
  </div>
</div>
<%= render '/shared/footer' %>
</div>
