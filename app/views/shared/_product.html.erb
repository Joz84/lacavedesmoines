<!--   <div class="card-description-index"> -->
  <div class="card-description-index">
        <%= link_to cl_image_tag(product.photos.first.path, class: "product-photo-index"), product_path({id: product.id,
                                        sku: product.sku,
                                        alcohol: product.alcohol.sku,
                                        brewery: product.brewery.sku,
                                        color: product.color.sku,
                                        capacity: product.capacity
                                        }) %>
        <div class="text-center">
        <%= link_to "Voir", product_path({id: product.id,
                                        sku: product.sku,
                                        alcohol: product.alcohol.sku,
                                        brewery: product.brewery.sku,
                                        color: product.color.sku,
                                        capacity: product.capacity
                                        }), class: 'btn btn-outline-secondary choose-button-index' %>
        </div>
        <p class="text-center"><%= product.capacity %> cl</p>
        <p class="text-center" style="margin-top:2px;font-size: 19px;">Prix : <%= product.price %> €</p>
        <h1 class="text-center"><%= link_to product.name, product_path({id: product.id,
                                        sku: product.sku,
                                        alcohol: product.alcohol.sku,
                                        brewery: product.brewery.sku,
                                        color: product.color.sku,
                                        capacity: product.capacity
                                        })  %></h1>

        <p><h3 class="text-center" style="font-family: 'Great Vibes', cursive;margin-top:9px"><%= product.degree %> %</p></h3>
        <p>Provenance : <%= product.region.name %></p>
        <p>Brasserie : <%= product.brewery.name %></p>
        <p>Type : <%= product.kind.name %></p>
        <p>Couleur : <%= product.color.name %></p>
        <p>Fermentation : <%= product.fermentation.name %></p>
        <% if product.specificity %>
          <p> Particularité : <%= product.specificity.name %></p>
        <% end %>
  </div>
