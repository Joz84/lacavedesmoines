<div class="container-fluid index-products" style = "background: linear-gradient(to right, rgba(2,0,0,0.4) 0%,rgba(2,0,0,0.42) 1%,rgba(0,0,0,0.38) 18%,rgba(214,214,214,0) 25%,rgba(201,201,201,0) 91%,rgba(0,0,0,0.4) 100%), url('http://res.cloudinary.com/cavedesmoines/image/upload/v1473258751/index-products_jkifoo.jpg');">
  <%= render '/shared/navbar' %>
  <div class="row">
    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-12 col-sm-2">
          <%= render '/shared/news' %>
        </div>
          <div class="col-xs-12 col-sm-8 deposit-container">
            <h2 class="cat-deposit"><%= @deposit.name %></h2>
            <div class="card-show">
              <div class="card-deposit-desc pull-left">
              <%= @deposit.description1 %><br /><br />
              <p class="text-center" style="margin-left: 35px;margin-right: 35px;">
              <%= @deposit.name %><br />
              <%= @deposit.address %><br />
              <%= @deposit.postal_code %><br />
              <%= @deposit.city %><br />
              <%= @deposit.country %><br /><br />
              <%= @deposit.complement %></p><br />
              </div>
              <div class="card-deposit-map pull-right">
                <iframe src="https://www.google.com/maps/d/embed?mid=1inLiUuZ4wKTsf34pyaTY1sGD_GE" width="100%" height="300px"></iframe>
              </div>
            </div>
          </div>
        <div class="col-xs-12 col-sm-2 call text-center">
          <img src="http://res.cloudinary.com/cavedesmoines/image/upload/v1475814667/icons/phone-cave-des-moines.png" alt="" style="width: 65%;margin-top: 36px;">
          <p style="font-size: 23px;color:white"><%= @deposit.description2 %></p>
        </div>
        <div class="col-xs-12 col-md-4 text-center">
          <div class="brewery-container1" onclick="document.location='1'">
            <div class="brewery-text text-center"><%= link_to "Cave de Bordeaux", @bordeaux %>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-md-4 text-center">
          <div class="brewery-container2" onclick="document.location='3'">
            <div class="brewery-text text-center"><%= link_to "Cave de Portets", @portets %>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-md-4 text-center">
          <div class="brewery-container3" onclick="document.location='2'">
            <div class="brewery-text text-center"><%= link_to "Bar-Cave de Mont-de-Marsan", @montdemarsan %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= render '/shared/footer' %>
  </div>
</div>
